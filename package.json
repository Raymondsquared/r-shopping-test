{
  "name": "r-shopping-typescript",
  "version": "0.0.1",
  "description": "Shopping with TypeScript",
  "repository": "https://github.com/raymondsquared/r-shopping-typescript",
  "scripts": {
    "build": "npm run clear && tsc",
    "clear": "rm -rf dist",
    "start": "nodemon --exec node -r ts-node/register ./src/main.ts",
    "test": "jest --coverage"
  },
  "author": "Raymond",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.18",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
